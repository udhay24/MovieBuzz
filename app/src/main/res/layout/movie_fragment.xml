<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.moviefragment.MovieFragment"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <TextView
            android:text="@string/popular_movies"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="wrap_content"
            android:id="@+id/popular_movies_label" android:layout_marginEnd="336dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/popular_movies_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/popular_movies_recycler_view"/>
        <TextView
            android:text="@string/trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/now_playing_text_view" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/popular_movies_recycler_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_text_view"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/now_playing_recycler_view"
            tools:listitem="@layout/now_showing_movie_view_holder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
